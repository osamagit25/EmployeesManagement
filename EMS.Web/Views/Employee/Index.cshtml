@model IEnumerable<CreateEmployeeVM>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="bi bi-people-fill me-2"></i>Employees
        </h2>

        <a asp-action="Create" class="btn btn-success shadow">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <form asp-action="Index" method="post" class="input-group mb-4 shadow-sm">
        <input type="text" name="input" class="form-control" placeholder="🔍 Search by name..." />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search">Search</i>
        </button>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Image)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Age)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Salary)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Email)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Address)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Department)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().IsActive)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().HiringDate)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DateOfCreation)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>


                            <img src="~/@item.ImageURL" width="75" class="img-fluid rounded-circle" />


                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Salary.ToString("C")</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>@item.Department.Name</td>
                        <td>
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                @(item.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>@item.HiringDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.DateOfCreation.ToString("yyyy-MM-dd")</td>
                        <td class="text-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square">Edit</i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-info-circle">Details</i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash">Delete</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
